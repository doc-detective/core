{
  "specId": "screenshot",
  "tests": [
    {
      "steps": [
        {
          "goTo": "http://localhost:8092"
        },
        {
          "stepId": "screenshot-boolean",
          "screenshot": true
        },
        {
          "runShell": "rm screenshot-boolean.png"
        },
        {
          "stepId": "screenshot-string",
          "screenshot": "image.png"
        },
        {
          "runShell": "rm image.png"
        },
        {
          "stepId": "screenshot-object-crop-string",
          "screenshot": {
            "path": "crop.png",
            "directory": "static/images",
            "maxVariation": 0.1,
            "crop": "#text-input"
          }
        },
        {
          "stepId": "screenshot-object-crop-object-padding-integer",
          "screenshot": {
            "path": "padding.png",
            "directory": "static/images",
            "maxVariation": 0.1,
            "crop": {
              "selector": "#text-input",
              "padding": 5
            }
          }
        },
        {
          "stepId": "screenshot-object-crop-object-padding-object",
          "screenshot": {
            "path": "padding.png",
            "directory": "static/images",
            "maxVariation": 0.1,
            "crop": {
              "selector": "#text-input",
              "padding": {
                "top": 5,
                "right": 5,
                "bottom": 5,
                "left": 5
              }
            }
          }
        }
      ]
    }
  ]
}
