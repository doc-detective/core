{
  "id": "http tests",
  "description": "This is a test collection",
  "tests": [
    {
      "id": "env variables test",
      "description": "These tests will show off how using env files to set variables works in Doc Detective.",
      "steps": [
        {
          "action": "setVariables",
          "path": "test/artifacts/env"
        },
        {
          "action": "httpRequest",
          "url": "https://reqres.in/api/users",
          "method": "post",
          "requestData": {
            "auth": "$SECRET",
            "name": "$USER",
            "job": "$JOB"
          },
          "responseData": {
            "name": "John Doe",
            "job": "Software Engineer"
          },
          "statusCodes": [200, 201]
        },
        {
          "action": "httpRequest",
          "url": "https://reqres.in/api/users",
          "method": "get",
          "envsFromResponseData": [
            {
              "name": "ID",
              "jqFilter": ".data[0].id"
            }
          ],
          "statusCodes": [200, 201]
        },
        {
          "action": "httpRequest",
          "url": "https://reqres.in/api/users/$ID",
          "method": "get",
          "timeout": 1000,
          "responseData": {
            "data": {
              "first_name": "George",
              "last_name": "Bluth"
            }
          },
          "statusCodes": [200, 201],
          "savePath": "response.json",
          "maxVariation": 0,
          "overwrite": "byVariation"
        }
      ]
    },
    {
      "id": "Strict response data test",
      "description": "Set `allowAdditionalFields` to `false` to ensure that the response data is strictly matched.",
      "steps": [
        {
          "action": "httpRequest",
          "url": "https://reqres.in/api/users/1",
          "method": "get",
          "timeout": 100,
          "responseData": {
            "data": {
              "id": 1,
              "email": "george.bluth@reqres.in",
              "first_name": "George",
              "last_name": "Bluth",
              "avatar": "https://reqres.in/img/faces/1-image.jpg"
            },
            "support": {
              "url": "https://reqres.in/#support-heading",
              "text": "To keep ReqRes free, contributions towards server costs are appreciated!"
            }
          },
          "allowAdditionalFields": false
        }
      ]
    }
  ]
}
