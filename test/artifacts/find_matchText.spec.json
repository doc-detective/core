{
  "id": "matchTextRegex",
  "tests": [
    {
      "steps": [
        {
          "action": "goTo",
          "url": "http://localhost:8092"
        },
        {
          "action": "find",
          "selector": "h2",
          "matchText": "Text Inputs"
        },
        {
          "action": "find",
          "selector": "h2",
          "matchText": "/^Text Inputs$/"
        },
        {
          "action": "find",
          "selector": "h2",
          "matchText": "/^Text.*?s/"
        }
      ]
    }
  ]
}
