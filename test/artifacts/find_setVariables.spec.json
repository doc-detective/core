{
  "tests": [
    {
      "id": "Set env variable from element text",
      "steps": [
        {
          "action": "goTo",
          "url": "http://localhost:8092"
        },
        {
          "description": "Set HEADING variable to the text of the element with h2.",
          "action": "find",
          "selector": "h2",
          "setVariables": [
            {
              "name": "HEADING",
              "regex": ".*"
            }
          ]
        },
        {
          "description": "Print and validate the value of the HEADING variable.",
          "action": "runShell",
          "command": "echo $HEADING",
          "output": "Text Inputs"
        }
      ]
    }
  ]
}
