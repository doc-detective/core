{
  "id": "setup",
  "tests": [
    {
      "steps": [
        {
          "action": "runShell",
          "command": "echo",
          "args": ["setup"],
          "exitCodes": [0],
          "output": "/.*?/",
          "setVariables": [
            {
              "name": "TEST",
              "regex": ".*"
            }
          ]
        },
        {
          "action": "runShell",
          "command": "echo",
          "args": ["$TEST"],
          "exitCodes": [0],
          "output": "setup"
        },
        {
          "description": "Testing timeout.",
          "action": "runShell",
          "command": "ping 127.0.0.1 -n 6 > nul",
          "timeout": 6000
        }
      ]
    }
  ]
}
