{
  "id": "setup",
  "tests": [
    {
      "steps": [
        {
          "description": "Testing regex output matching and variable setting.",
          "action": "runShell",
          "command": "echo",
          "args": ["setup"],
          "exitCodes": [0],
          "output": "/.*?/",
          "setVariables": [
            {
              "name": "TEST",
              "regex": ".*"
            }
          ]
        },
        {
          "description": "Testing variable substitution.",
          "action": "runShell",
          "command": "echo",
          "args": ["$TEST"],
          "exitCodes": [0],
          "output": "setup"
        },
        {
          "description": "Testing timeout.",
          "action": "runShell",
          "command": "bash -c 'sleep 1'",
          "timeout": 2000
        }
      ]
    }
  ]
}
