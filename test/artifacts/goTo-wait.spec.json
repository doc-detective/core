{
  "tests": [
    {
      "testId": "goto-wait-defaults",
      "description": "Test goTo with default wait behavior (no wait config specified)",
      "steps": [
        {
          "goTo": "http://localhost:8092/wait-test-static.html"
        }
      ]
    },
    {
      "testId": "goto-wait-network-idle",
      "description": "Test goTo with network activity detection",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-network.html",
            "wait": {
              "networkIdleTime": 500
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-dom-mutations",
      "description": "Test goTo with DOM mutation detection",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-dom-mutations.html",
            "wait": {
              "domIdleTime": 1000
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-find-selector",
      "description": "Test goTo with element finding by selector",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-late-element.html",
            "wait": {
              "find": {
                "selector": "[data-testid='dashboard-loaded']"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-find-text",
      "description": "Test goTo with element finding by text",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-late-element.html",
            "wait": {
              "find": {
                "elementText": "System operational"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-find-selector-and-text",
      "description": "Test goTo with element finding by both selector and text",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-late-element.html",
            "wait": {
              "find": {
                "selector": ".dashboard-loaded",
                "elementText": "Dashboard"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-all-conditions",
      "description": "Test goTo with all wait conditions enabled",
      "steps": [
        {
          "goTo": {
            "url": "http://localhost:8092/wait-test-late-element.html",
            "wait": {
              "timeout": 10000,
              "networkIdleTime": 500,
              "domIdleTime": 1000,
              "find": {
                "selector": ".status",
                "elementText": "operational"
              }
            }
          }
        }
      ]
    },
    {
      "testId": "goto-wait-simple-string-format",
      "description": "Test goTo with simple string format still works",
      "steps": [
        {
          "goTo": "http://localhost:8092/wait-test-static.html"
        }
      ]
    }
  ]
}
