{
  "tests": [
    {
      "contexts": [{"app": {"name": "chrome"},"platforms":["windows","mac","linux"]}],
      "steps": [
        {
          "action": "goTo",
          "url": "http://www.duckduckgo.com"
        },
        {
          "action": "startRecording",
          "path": "simple.mp4",
          "overwrite": true
        },
        {
          "action": "find",
          "selector": "#searchbox_input",
          "moveTo": true,
          "click": true,
          "typeKeys": {
            "keys": ["doc-detective","$ENTER$"]
          } 
        },
        {
          "action": "stopRecording"
        }
      ]
    }
  ]
}
